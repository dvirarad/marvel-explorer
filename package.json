{
  "name": "marvel-explorer",
  "version": "1.0.0",
  "description": "Marvel Explorer - A full-stack application to explore Marvel movies and actors",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd marvel-explorer-backend && npm install",
    "install:frontend": "cd marvel-explorer-frontend && npm install",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd marvel-explorer-backend && npm run start:dev",
    "start:frontend": "cd marvel-explorer-frontend && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd marvel-explorer-backend && npm run build",
    "build:frontend": "cd marvel-explorer-frontend && npm run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd marvel-explorer-backend && npm run lint",
    "lint:frontend": "cd marvel-explorer-frontend && npm run lint"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "typescript-eslint": "^8.25.0",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8"
  }
}
